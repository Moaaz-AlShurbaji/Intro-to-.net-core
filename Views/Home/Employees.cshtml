@model Employee;
<!DOCTYPE html>
<html>
    <head>
        <title></title>
        <!--style validation output-->
        <style>
            .input-validation-error{
                border: 1px solid darkred;
                background-color: rgba(255,0,0,0.2)
            }

        .validation-summary-errors{
            color: red;
        }
        </style>
    </head>
    <body>
        <h1 class="text-center">Employees form</h1>
        <div class="container">
            <div asp-validation-summary="All">

            </div>
            <form asp-action="Employees" method="post">
                <div class="form-group">
                    <label asp-for="name">Employee Name</label>
                    <input asp-for="name" class="form-control">
                </div>

                <div class="form-group">
                    <label asp-for="department">Example select</label>
                    <select asp-for="department" class="form-control">
                        <option value="IT">Information tech</option>
                        <option value="marketing">Marketing</option>
                        <option value="adminstration">Adminstration</option>
                    </select>
                </div>

                <div class="form-check">
                    <input asp-for="isActive" class="form-check-input" id="defaultCheck1">
                    <label asp-for="isActive" class="form-check-label">Is Active?</label>
                </div>
                
                <div class="form-group">
                    <label asp-for="jobTitle">Job Title</label>
                    <input asp-for="jobTitle" class="form-control">
                </div>

                <div class="form-group">
                    <label asp-for="birthDate">Birthdate</label>
                    <input type="date" asp-for="birthDate" class="form-control">
                </div>

                <div class="form-group">
                    <label asp-for="email">Email Address</label>
                    <input type="email" asp-for="email" class="form-control">
                </div>

                <button class="btn btn-primary" type="submit">Save</button>
            </form>
        </div>
        
    </body>
</html>
